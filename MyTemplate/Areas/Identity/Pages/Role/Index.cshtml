@page
@model IndexModel
@{
}

<h1>Role Lists</h1>
<partial name="_StatusMessage" model="@Model.StatusMessage"/>

<form method="post">
    <button class="btn btn-primary" asp-page="./Add" asp-page-handler="StartNewRole">Create New Role</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in @Model.Roles)
            {
                <tr>
                    <td>@i.Id</td>
                    <td>@i.Name</td>
                    <td>
                        <form method="post" class="d-inline">
                            <button class="btn btn-success btn-sm" name="Input.Id" value="@i.Id" asp-page="./Add" asp-page-handler="StartUpdateRole">Update</button>
                        </form>
                        <form method="post" class="d-inline">
                            <button class="btn btn-success btn-sm" name="Input.Id" value="@i.Id" asp-page="./Delete">Delete</button>
                        </form>
                    </td>
                </tr>
            }
    </tbody>
</table>
